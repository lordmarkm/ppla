        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>ppla</groupId>
        <artifactId>ppla-security</artifactId>
        <type>war</type>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>ppla</groupId>
        <artifactId>ppla-security</artifactId>
        <classifier>classes</classifier>
        <version>${project.version}</version>
      </dependency>

      <!-- Tyrael -->
      <dependency>
