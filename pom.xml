      </dependency>
      <dependency>
        <groupId>baldy.commons</groupId>
        <artifactId>baldy-commons-resourcedoc</artifactId>
        <version>${baldy-commons.version}</version>
        <type>war</type>
      </dependency>
      <dependency>
        <groupId>baldy.commons</groupId>
